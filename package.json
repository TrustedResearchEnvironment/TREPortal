{
  "name": "tre-portal",
  "version": "1.0.0",
  "description": "TRE Portal Admin Dashboards",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^26.6.2",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js",
      "**/dataSourcePlatformAdmin.js",
      "**/dataSouceTypesPlatformAdmin.js",
      "**/emailTemplatePlatformAdmin.js",
      "**/manageDataSets.js",
      "**/metaDataPlatformAdmin.js",
      "**/requestsPlatformAdmin.js",
      "**/approver.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }]
    ]
  }
}
